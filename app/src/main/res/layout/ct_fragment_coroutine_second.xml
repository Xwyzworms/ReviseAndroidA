<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.contents.coroutines.v_2.FragmentCoroutineSecond">

    <TextView
        android:id="@+id/tv_ct_second_stock1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hellow"
        android:textAlignment="center"
        android:padding="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/tv_ct_second_stock2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hellow"
        android:textAlignment="center"
        android:padding="15dp"
        app:layout_constraintTop_toBottomOf="@id/tv_ct_second_stock1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/tv_ct_second_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Takes Time : "
        android:padding="15dp"
        app:layout_constraintTop_toBottomOf="@id/tv_ct_second_stock2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <Button
        android:id="@+id/btn_second_first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Try without coroutine"
        app:layout_constraintTop_toBottomOf="@id/tv_ct_second_time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


    <TextView
        android:id="@+id/tv_ct_second_time_coroutine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Takes time"
        android:textAlignment="center"
        android:padding="15dp"
        app:layout_constraintBottom_toTopOf="@id/tv_ct_second_stock1_coroutine"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:id="@+id/tv_ct_second_stock2_coroutine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Stock 2"
        android:textAlignment="center"
        android:padding="15dp"
        app:layout_constraintBottom_toTopOf="@id/btn_second_coroutine"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:id="@+id/tv_ct_second_stock1_coroutine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Stock 1"
        android:textAlignment="center"
        android:padding="15dp"
        app:layout_constraintBottom_toTopOf="@id/tv_ct_second_stock2_coroutine"
        app:layout_constraintStart_toStartOf="parent"
        />
    <Button
        android:id="@+id/btn_second_coroutine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Try with coroutine"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>