<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    tools:context=".main.contents.retrofits.RetrofitActivityMain">

    <Button
        android:id="@+id/btn_retrofit_query1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get Albums"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <Button
        android:id="@+id/btn_retrofit_query2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get Sorted Albums"

        app:layout_constraintTop_toBottomOf="@id/btn_retrofit_query1"
        app:layout_constraintStart_toStartOf="@id/btn_retrofit_query1"
        app:layout_constraintEnd_toEndOf="@id/btn_retrofit_query1"
        />
    <Button
        android:id="@+id/btn_retrofit_path"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get Single Album"

        app:layout_constraintTop_toBottomOf="@id/btn_retrofit_query2"
        app:layout_constraintStart_toStartOf="@id/btn_retrofit_query2"
        app:layout_constraintEnd_toEndOf="@id/btn_retrofit_query2"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_retrofit_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"

        app:layout_constraintTop_toBottomOf="@id/btn_retrofit_path"
        app:layout_constraintStart_toStartOf="@id/btn_retrofit_path"
        app:layout_constraintEnd_toEndOf="@id/btn_retrofit_path"

        >


    </androidx.recyclerview.widget.RecyclerView>
</androidx.constraintlayout.widget.ConstraintLayout>