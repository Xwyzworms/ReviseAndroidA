<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.contents.coroutines.v_1.FragmentCoroutineFirst">




    <Button
        android:id="@+id/ct_first_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Download The Data"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        />

    <TextView
        android:id="@+id/ct_first_tv_counter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="30sp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/ct_first_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <Button android:id="@+id/ct_first_btn_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Counter"
        app:layout_constraintTop_toBottomOf="@id/ct_first_tv_counter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/tv_ct_first_coroutine_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current 0"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@id/ct_first_btn_counter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        />

    <Button android:id="@+id/ct_first_btn_counter_coroutine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Download the Data With Coroutine Operation"
        app:layout_constraintTop_toBottomOf="@id/tv_ct_first_coroutine_counter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
